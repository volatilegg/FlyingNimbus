# Uncomment this line to define a global platform for your project
platform :ios, '9.0'

target 'FlyingNimbus' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for FlyingNimbus
  # Networking library. Check for more information: https://github.com/Alamofire/Alamofire
  pod 'Alamofire', '~> 4.4'
  # Json -> Object and vice versa. Check for more information: https://github.com/hkellaway/Gloss
  pod 'Gloss', '~> 1.2'
  # DataBus. Check for more information https://github.com/mxcl/PromiseKit.git
  pod 'PromiseKit', '~> 4.2'
  # Binding. Check for more information: https://github.com/SwiftBond/Bond
  pod 'Bond', '~> 6.2'
  
  target 'FlyingNimbusTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'FlyingNimbusUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
